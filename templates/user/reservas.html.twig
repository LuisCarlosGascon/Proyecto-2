{% extends 'base.html.twig' %}

{% block title %}Mis reservas{% endblock %}

{% block body %}
<div class="c-tablaRM">
<table class="table">
    <thead class="c-thead">
        <tr>
            <th class="c-tablaRM__th">Fecha</th>
            <th class="c-tablaRM__th">Asiste</th>
            <th class="c-tablaRM__th">Fecha de cancelación</th>
            <th class="c-tablaRM__th">Tramo</th>
            <th class="c-tablaRM__th">⚙</th>
        </tr>
    </thead>
    <tbody>
    {% for reserva in reservas %}
        <tr class="c-tabla__datos">
            <td class="c-tablaRM__tr">{{reserva.fecha|date('Y-m-d')}}</td>
            <td class="c-tablaRM__tr">{% if reserva.asiste is null %}Por comprobar{% else %}
            {% if reserva.asiste %}Sí{% else %}No{% endif %}{% endif %}</td>
            <td class="c-tablaRM__tr">{% if reserva.FCancelacion is not null %}{{reserva.FCancelacion|date('Y-m-d')}}{% else %}No cancelado{% endif %}</td> 
            <td class="c-tablaRM__tr">{{reserva.tramo}}</td>
            <td class="c-tablaRM__tr"><a href="{{url('reserva_cancelar',{'id':reserva.id})}}">&#10006</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
