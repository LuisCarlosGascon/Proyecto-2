{% extends 'base.html.twig' %}

{% block title %}Editar un evento{% endblock %}

{% block body %}
<script src="{{ asset('js/evento.js')}}"></script>
<script src="{{ asset('js/editarEvento.js')}}"></script>
<div class="container">
    <div class="c-formulario__p p-3">
                <div class="c-formulario__titulo"><h1 class="h3">Editar Evento</h1></div>
                    <div class="c-formulario__col">
                        <div>
                            <label class="c-formulario__label">Nombre</label>
                            <input type="text" id="nombreEvento" class="form-control c-formulario__input" value={{evento.nombre}} eventoId={{evento.id}}>
        
                            <label class="c-formulario__label mt-2">Juego</label>
                            <select id="juegoEvento" class="form-control c-formulario__input"></select>

                            <label class="c-formulario__label mt-2">Hora</label>
                            <select id="juegoHora" class="form-control c-formulario__input"></select>
                         
                        </div>
                        <div>
                            <label class="c-formulario__label ">Fecha</label>
                            <input type="text" id="fechaEvento" class="form-control c-formulario__input" value={{fecha}} readonly>
 
                            
                            <label class="c-formulario__label mt-2">Número de asistentes</label>
                            <input type="number" id="asistentesEvento" class="form-control c-formulario__input" value={{evento.NumAsistentesMax}}>

                            <label class="c-formulario__label mt-2">Asistentes</label>
                            <select id="nAsistentesEvento" class="form-control c-formulario__input" multiple></select>
                        </div>
                    </div>
                <div class="c-formulario__btn">
                    <button class="btn btn-primary" id="btnEvento_editar">Editar evento</button>
                </div>       
            </div>
    <div id="alertPut" class="c-alert success">
        <span class="c-closebtn">&times;</span>  
        <strong>¡Genial!</strong> El evento se ha editado correctamente.
    </div>
</div>
{% endblock %}