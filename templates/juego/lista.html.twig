{% extends 'base.html.twig' %}

{% block title %}Juegos{% endblock %}

{% block body %}
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container py-5 mt-5">
            <div class="row g-5">
            {% for juego in juegos %}
                <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.3s">
                    <div class="service-item rounded d-flex flex-column align-items-center justify-content-center text-center">
                        <img src="{{asset('img/' ~ juego.imagen)}}" class="service-icon">
                        <h4 class="mb-3">{{juego.nombre}}</h4>
                        <p class="m-0">{{juego.acortaDescripcion}}</p>
                        <a class="btn btn-lg btn-primary rounded btn-juego" href="{{url('app_juegos_detalles',{'id':juego.id})}}" idjuego="{{juego.id}}">
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
</div>

<div id="modalJuegos">

</div>
{% endblock %}
